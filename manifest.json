{
    "name": "OpenCourseWare Anti-download",
    "short_name": "OCW Anti-download",
    "description": "Prevents OCW files from being forced to download.",
    "version": "1.0",
    "manifest_version": 3,
    "author" : "Eric Roy",

    "icons": {
        "16": "assets/ocw-favicon16.png",
        "32": "assets/ocw-favicon32.png",
        "48": "assets/ocw-favicon48.png",
        "128": "assets/ocw-favicon128.png"
    },

    "content_scripts" : 
    [
        {
            "matches": ["*://ocwitic.epsem.upc.edu/*"],
            "all_frames": true,
            "js": [
                "include/jquery-3.4.1.min.js",
                "include/jszip.min.js",
                "include/FileSaver.js",
                "include/turndown.js",
                "include/fnon.min.js",
                "js/download_popup.js",
                "js/download_subject.js",
                "js/fetch_files.js",
                "js/tree.js",
                "js/replace_html.js"
                ],
            "css": [
                "include/fnon.min.css"
            ],
            "run_at": "document_end"
        }
    ]
}